block vars

doctype html
html(lang="fr")
  head
    title #{config.SITE_TITLE} | #{pageTitle}
    meta(name='viewport', content="width=device-width,initial-scale=1.0")
    link(rel="icon", type="image/png", href="/img/logo.png")
    link(rel="stylesheet", type="text/css", href="/css/dist/foundation.min.css")
    link(rel="stylesheet", href="/css/main.css")
    if needDatePicker == true
      link(rel="stylesheet", href="/css/dist/foundation-datepicker.min.css")
    if needSlider == true
      link(rel="stylesheet", href="/css/dist/nouislider.min.css")
  body
    .top-bar
      .top-bar-left
        ul.menu
          a(href="/")
            img(src="/img/logo.png")
            li.menu-text= config.SITE_TITLE
      if (USER_FULLNAME)
        .top-bar-right
          ul.menu.vertical.medium-horizontal.menu
            li.button-group.stacked-for-small
              #profileButton.button.dropdown(data-toggle="profileDropdown") #{USER_FULLNAME}
              #profileDropdown.dropdown-pane(data-dropdown="true")
                  a.button.expanded(href="/me") Mon profil
                  a.button.expanded(href="/logout") Se d√©connecter
              a.button(href="/") Rechercher
              a.button(href="/offer") Proposer
    block content

    #footer.row.expanded
      .small-4.columns
        h5 Fait avec amour
        a A propos
      .small-4.columns
        h5 Liens utiles
        a Aide
      .small-4.columns
        h5 Travaillez avec moi
        a(href="#{config.ABOUT_URL}") Github
  
    block scripts
      #scripts
        script(src='/js/dist/jquery.min.js')
        script(src='/js/dist/what-input.min.js')
        script(src='/js/dist/foundation.min.js')
        script(src='/js/main.js')

        if loadSideScript == true
          script(src="/js/#{filename.split('/').pop().replace('jade', 'js')}")

        if needSlider == true
          script(src='/js/dist/nouislider.min.js')
          script(src='/js/dist/wNumb.js')
        
        if needDatePicker == true
          script(src='/js/dist/foundation-datepicker.min.js')
          script(src='/js/dist/foundation-datepicker.fr.js')

        if needGoogleMaps == true
          script(src='https://maps.googleapis.com/maps/api/js?key=#{config.GMAPS_API_KEY}&libraries=places')


